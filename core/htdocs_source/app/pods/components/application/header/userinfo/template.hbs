{{#if this.content.user}}
    <div class="userinfo text-nowrap">
        <ul class="nav flex-column">
            {{!-- template-lint-disable no-bare-strings --}}
            <li class="text-right user">
                {{t 'userinfo.name'}}
                <strong>{{this.content.user.realname}} ({{this.content.user.role}})</strong>
            </li>
            <li class="text-right pki_realm">
                {{t 'userinfo.realm'}}
                <strong>{{this.content.user.pki_realm_label}} ({{this.content.user.pki_realm}})</strong>
            </li>
            {{#if this.content.user.last_login}}
            <li class="text-right last_login">
                {{t 'userinfo.last_login'}}
                <strong><OxiBase::Formatted @format="timestamp" @value={{this.content.user.last_login}} @class="big" @truncate={{true}} /></strong>
            </li>
            {{/if}}
            {{#if this.currentTenant}}
                <li class="text-right tenant">
                    {{#if this.hasMultipleTenants}}
                        {{t 'userinfo.tenant'}}
                        <BsDropdown style="display: inline" as |dd|>
                            <dd.toggle>
                                <strong>{{this.currentTenant}}</strong> <span class="caret"></span>
                            </dd.toggle>
                            <dd.menu class="dropdown-menu-right" as |ddm|>
                                {{#each this.content.user.tenants as |t|}}
                                    <ddm.item>
                                        <ddm.linkTo {{on 'click' (fn this.setTenant t)}}>{{t.label}}</ddm.linkTo>
                                    </ddm.item>
                                {{/each}}
                            </dd.menu>
                        </BsDropdown>
                    {{else}}
                        {{t 'userinfo.tenant'}} <strong>{{this.currentTenant}}</strong>
                    {{/if}}
                </li>
            {{/if}}
        </ul>
    </div>
{{/if}}

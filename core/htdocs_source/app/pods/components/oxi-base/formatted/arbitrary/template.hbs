{{#if this.isString}}
    {{#if @raw}}
        {{{defuse @value}}}
    {{else}}
        {{@value}}
    {{/if}}
{{else}}
    <BsButton
        @onClick={{this.toggleDetails}}
        @type=""
        class="btn-sm btn-light border-secondary"
    >
        [{{this.type}}]
        {{#if this.detailsOpen}}
            <span class="glyphicon glyphicon-triangle-bottom"></span>
        {{else}}
            <span class="glyphicon glyphicon-triangle-right"></span>
        {{/if}}
    </BsButton>
    {{#if this.detailsOpen}}
        <div class="card card-body bg-light">
            <pre style="white-space: pre-wrap">{{this.asJSON}}</pre>
        </div>
    {{/if}}
{{/if}}

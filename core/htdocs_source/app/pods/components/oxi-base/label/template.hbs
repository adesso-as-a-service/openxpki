{{~#each (arrayify @text) as |txt|~}}
    <div class="{{@class}} {{this.cssClasses}}">
        {{#if @tooltip}}
            <EmberTooltip @delay={{this.config.tooltipDelay}}>
                {{@tooltip}}
            </EmberTooltip>
        {{else if @raw_tooltip}}
            <EmberTooltip @delay={{this.config.tooltipDelay}}>
                {{{defuse @raw_tooltip}}}
            </EmberTooltip>
        {{else if @tooltip_page}}
            <EmberPopover
                @delay={{this.config.tooltipDelay}}
                @onShow={{this.fetchTooltip}}
                @updateFor={{this.tooltipReady}}
            >
                {{#if this.tooltipContent}}
                    <OxiSection @content={{this.tooltipContent}} @onInit={{this.setTooltipReady}}/>
                {{else}}
                    wait...
                {{/if}}
            </EmberPopover>
        {{/if}}
    {{#if @raw}}
        {{{defuse txt}}}
    {{else}}
        {{txt}}
    {{/if}}
    </div>
{{~/each~}}

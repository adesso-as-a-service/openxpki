<div class="row" {{may-focus this false}}>
    <div class="col-lg-8">
        <div class="input-group has-validation">
            <EmberFlatpickr
                class="form-control"
                @date={{this.date}}
                @onReady={{this.onReady}}
                @onChange={{this.datePicked}}
                @enableTime={{true}}
                @dateFormat={{t 'component.oxifield_datetime.date_format'}}
                @locale={{this.oxiLocale.shortLocale}}
                placeholder={{@content.placeholder}}
                required={{not @content.is_optional}}
            />
            <div class="invalid-feedback">{{@error}}</div>
            <div class="input-group-append">
                {{#if this.allowClearing}}
                    <BsButton
                        @onClick={{this.flatpickr.clear}}
                        @icon="glyphicon glyphicon-trash"
                        @type="light"
                        class="oxi-btn-cancel btn-sm"
                    >
                    </BsButton>
                {{/if}}
                <BsButton
                    @onClick={{this.flatpickr.open}}
                    @icon="glyphicon glyphicon-calendar"
                >
                </BsButton>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <input class="form-control" type="text" placeholder={{t 'component.oxifield_datetime.timezone' tz=this.timezoneLabel}} disabled/>
    </div>
</div>
